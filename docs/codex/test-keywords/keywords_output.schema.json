{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "run_id",
    "mode",
    "provider",
    "models",
    "topic",
    "prompt_path",
    "input_pdfs",
    "payload"
  ],
  "properties": {
    "run_id": {"type": "string"},
    "mode": {"type": "string", "enum": ["single"]},
    "provider": {"type": "string"},
    "models": {"type": "object"},
    "topic": {"type": "string"},
    "prompt_path": {"type": "string"},
    "input_pdf_dir": {"type": ["string", "null"]},
    "input_pdfs": {
      "type": "array",
      "items": {"type": "string"}
    },
    "pdf_text_inputs": {
      "type": "array",
      "items": {"type": "string"}
    },
    "tool_usage": {"type": "object"},
    "payload": {"$ref": "keywords_response.schema.json"},
    "raw_output": {"type": "string"},
    "errors": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": true
}
