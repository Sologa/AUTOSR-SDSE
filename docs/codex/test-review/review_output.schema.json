{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["run_id", "mode", "items", "criteria_source", "criteria"],
  "properties": {
    "run_id": {"type": "string"},
    "mode": {"type": "string", "enum": ["single", "full"]},
    "provider": {"type": "string"},
    "reviewer": {"type": "string"},
    "models": {"type": "object"},
    "criteria_source": {"type": "string", "enum": ["workspace", "default"]},
    "criteria": {
      "type": "object",
      "required": ["inclusion", "exclusion"],
      "properties": {
        "inclusion": {"type": "string"},
        "exclusion": {"type": "string"}
      },
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "items": {"$ref": "#/$defs/item"}
    },
    "errors": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "$defs": {
    "item": {
      "type": "object",
      "required": ["index", "arxiv_id", "title", "abstract", "missing_fields"],
      "properties": {
        "index": {"type": "integer", "minimum": 0},
        "arxiv_id": {"type": "string"},
        "title": {"type": "string"},
        "abstract": {"type": "string"},
        "missing_fields": {
          "type": "array",
          "items": {"type": "string"}
        },
        "evaluation": {"type": "integer", "minimum": 1, "maximum": 5},
        "reasoning": {"type": "string"},
        "reviewer": {"type": "string"},
        "rounds": {"type": "object"},
        "final_verdict": {"type": "string"},
        "discard_reason": {"type": ["string", "null"]},
        "raw_output": {}
        ,
        "error": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    }
  }
}
